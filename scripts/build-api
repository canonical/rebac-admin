#!/bin/bash

if [ ! -f openapi.yaml ]
then
  echo "Warning: openapi.yaml was not found! Trying to download it now."
  source ./scripts/fetch-api-spec
fi

if [ -d src/api ]
then
  echo "Warning: The contents of src/api will be replaced with the Orval generated files!"
  read -p "Do you want to proceed (y/n)? " DELETE_SRC_API
  if [[ "$DELETE_SRC_API" =~ ^[Nn]$ ]]
  then
    exit 0
  fi
  if ! [[ "$DELETE_SRC_API" =~ ^[Yy]$ ]]
  then
    echo "Error: Invalid choice!"
    echo "Please rerun the script and choose either 'y' for YES or 'n' for NO."
    exit 1
  fi
  rm -r src/api
  if [ -d src/api ]
  then
    echo "Error: Failed to delete src/api!"
    exit 1
  fi
fi

mkdir -p src/api
if ! [ -d src/api ]
then
  echo "Error: Failed to create src/api!"
  exit 1
fi

orval --config ./orval.config.ts
if [ -f src/api/api.msw.ts ] && [ -f src/api/api.schemas.ts ] && [ -f src/api/api.ts ]
then
  echo "The correct files in src/api have been generated by Orval!"
else
  echo "Error: Missing files and/or incorrect file names in src/api after running Orval!"
  echo "Please check that orval.config.ts is set up correctly."
  exit 1
fi
